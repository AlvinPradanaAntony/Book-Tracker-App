<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookTrackerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint_500</item>
        <item name="colorPrimaryVariant">@color/mint_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and Surface colors. -->
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/gray_200</item>
        <item name="colorOnSurface">@color/charcoal_700</item>

        <!-- Error color. -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="customTabLayoutBackgroundColor">@color/white</item>
        <item name="customTabLayoutFontColorSelected">@color/mint_500</item>
        <item name="customTabLayoutFontColorNotSelected">@color/gray_300</item>
        <item name="customDividerColorForTabLayout">@color/white_100</item>
    </style>

    <style name="Theme.BookTrackerApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookTrackerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookTrackerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>